<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundSplash"
    tools:context=".View.RegisterCustActivity">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:background="@drawable/elmawkaflogo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="143dp"
        android:text="Customer Register"
        android:textAlignment="center"
        android:textColor="@color/TxtColor"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtCustFullName"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="336dp"
        android:background="@drawable/text_background"
        android:hint="Full name ..."
        android:inputType="textEmailAddress"
        android:padding="14dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtCustEmailReg"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="276dp"
        android:background="@drawable/text_background"
        android:hint="Email ..."
        android:inputType="textEmailAddress"
        android:padding="14dp"
        android:textColor="@color/TxtEditColor"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtCustRegPhone"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/TxtCustFullName"
        android:layout_alignLeft="@+id/TxtCustFullName"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="216dp"
        android:background="@drawable/text_background"
        android:hint="Phone number ..."
        android:inputType="phone"
        android:padding="14dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtCustRegPwd"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="155dp"
        android:background="@drawable/text_background"
        android:hint="Password ..."
        android:inputType="textPassword"
        android:padding="14dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/TxtCustRegPwd2"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:background="@drawable/text_background"
        android:hint="Re-Password ..."
        android:inputType="textPassword"
        android:padding="14dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/BtnCustSignUp"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_background"
        android:text="Sign up now"
        android:textAllCaps="false"
        android:textStyle="bold" />

</RelativeLayout>