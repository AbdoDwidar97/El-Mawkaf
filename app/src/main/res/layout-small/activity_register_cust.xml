<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundSplash"
    tools:context=".View.RegisterCustActivity">


    <EditText
        android:id="@+id/txtCustFullName"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_background"
        android:hint="Full name ..."
        android:padding="7dp"
        android:textSize="7dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtCustEmailReg"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/text_background"
        android:hint="Email ..."
        android:padding="7dp"
        android:textSize="7dp"
        android:inputType="textEmailAddress"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtCustRegPhone"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="94dp"
        android:background="@drawable/text_background"
        android:hint="Phone number..."
        android:padding="7dp"
        android:textSize="7dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtCustRegPwd"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/text_background"
        android:hint="Password ..."
        android:padding="7dp"
        android:textSize="7dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtCustRegPwd2"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/text_background"
        android:hint="Re-Password ..."
        android:padding="7dp"
        android:textSize="7dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/BtnCustSignUp"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/button_background"
        android:text="Sign up now"
        android:textAllCaps="false"
        android:textSize="7dp"
        android:textStyle="bold" />

</RelativeLayout>