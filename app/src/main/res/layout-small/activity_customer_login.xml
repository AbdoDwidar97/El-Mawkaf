<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundSplash"
    tools:context=".View.CustomerLoginActivity">

    <ImageView
        android:id="@+id/ImgLogoLogin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/elmawkaflogo" />

    <TextView
        android:id="@+id/LblTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImgLogoLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:text="Customer Login"
        android:textAlignment="center"
        android:textColor="@color/TxtColor"
        android:textSize="8dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtCustEmail"
        android:layout_width="170dp"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:background="@drawable/text_background"
        android:hint="Email ..."
        android:inputType="textEmailAddress"
        android:padding="4dp"
        android:textColor="@color/TxtEditColor"
        android:textSize="7dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtPwd"
        android:layout_width="170dp"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:background="@drawable/text_background"
        android:hint="Password ..."
        android:inputType="textPassword"
        android:padding="4dp"
        android:textColor="@color/TxtEditColor"
        android:textSize="7dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/BtnCustLogin"
        android:layout_width="130dp"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:background="@drawable/button_background"
        android:text="Login"
        android:textSize="8dp"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/LblCreateNewAccountCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:text="I don't have an account"
        android:textAlignment="center"
        android:textSize="8dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

</RelativeLayout>