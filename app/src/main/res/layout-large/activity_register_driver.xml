<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundSplash"
    tools:context=".View.RegisterDriverActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:background="@drawable/elmawkaflogo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="170dp"
        android:text="Cab Register"
        android:textAlignment="center"
        android:textColor="@color/TxtColor"
        android:textSize="21dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtDriverFullName"
        android:layout_width="460dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="488dp"
        android:background="@drawable/text_background"
        android:hint="Full name ..."
        android:padding="14dp"
        android:textSize="22dp"
        android:inputType="textEmailAddress"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtDriverEmpIDReg"
        android:layout_width="460dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="415dp"
        android:background="@drawable/text_background"
        android:hint="Employee ID ..."
        android:padding="14dp"
        android:textColor="@color/TxtEditColor"
        android:textSize="22dp"
        android:inputType="textEmailAddress"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtDriverRegPhone"
        android:layout_width="460dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/TxtDriverFullName"
        android:layout_alignLeft="@+id/TxtDriverFullName"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="341dp"
        android:background="@drawable/text_background"
        android:hint="Phone number ..."
        android:inputType="phone"
        android:padding="14dp"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtDriverRegPwd"
        android:layout_width="460dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/BtnDriverSignUp"
        android:layout_alignRight="@+id/BtnDriverSignUp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-12dp"
        android:layout_marginRight="-12dp"
        android:layout_marginBottom="269dp"
        android:background="@drawable/text_background"
        android:hint="Password ..."
        android:inputType="textPassword"
        android:padding="14dp"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtDriverRegPwd2"
        android:layout_width="460dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="196dp"
        android:background="@drawable/text_background"
        android:hint="Re-Password ..."
        android:inputType="textPassword"
        android:padding="14dp"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/BtnDriverSignUp"
        android:layout_width="440dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:background="@drawable/button_background"
        android:text="Sign up now"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20dp"
        />

</RelativeLayout>