<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundSplash"
    tools:context=".View.WelcomeActivity">

    <Button
        android:id="@+id/Btndriver"

        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/BtnCustomer"
        android:layout_alignLeft="@+id/BtnCustomer"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginBottom="273dp"
        android:background="@drawable/button_background"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="I'm Driver"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:id="@+id/ImgLogo"
        android:background="@drawable/elmawkaflogo"
        />

    <Button
        android:id="@+id/BtnCustomer"

        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginBottom="186dp"
        android:background="@drawable/button_background"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="I'm Customer"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp" />


</RelativeLayout>